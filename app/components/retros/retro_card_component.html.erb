<div
  id="<%= dom_id(@retro) %>"
  class="group relative border-[2.5px] border-zinc-800 bg-[#F8F5EC] shadow-[5px_5px_0px_0px_rgba(39,39,42,1)] hover:shadow-[2px_2px_0px_0px_rgba(39,39,42,1)] hover:translate-x-[3px] hover:translate-y-[3px] transition-all duration-200 cursor-pointer overflow-hidden rounded-sm"
  data-controller="navigate"
  data-navigate-url-value="<%= retro_path(@retro) %>"
  data-action="click->navigate#go"
>
  <%# Top "Serial Number" Bar %>
  <div class="px-3 py-2 flex items-center gap-2 border-b-[2.5px] border-zinc-800 bg-white">
    <span class="text-[0.6rem] font-black text-zinc-900 uppercase tracking-widest">
      NO. <%= @retro.id %>
    </span>

    <div class="flex-1"></div>

    <%# Raw Action Buttons %>
    <div class="flex items-center gap-2" data-action="click->navigate#stop">
      <%= render IconButtonComponent.new(
        icon: "pencil",
        variant: :ghost,
        size: :sm,
        href: edit_retro_path(@retro),
        class: "text-zinc-900 hover:bg-zinc-200 rounded-none p-1",
        label: "Edit retro"
      ) %>
      
      <%= button_to @retro,
            method: :delete,
            class: "w-6 h-6 flex items-center justify-center text-zinc-900 hover:bg-red-500 hover:text-white transition-colors border border-transparent hover:border-black rounded-none",
            data: { turbo_confirm: "Are you sure you want to delete '#{@retro.name}'?" } do %>
        <%= icon_tag "close", class: "text-sm font-bold" %>
      <% end %>
    </div>
  </div>

  <%# Main Content Area %>
  <div class="px-4 py-6">
    
    <%# Title in Quotes %>
    <h2 class="font-black text-2xl text-zinc-900 uppercase leading-[0.9] tracking-tight">
      "<%= @retro.name %>"
    </h2>
    
  </div>

  <%# Footer Grid %>
  <div class="border-t-[2.5px] border-zinc-800 flex divide-x-[2.5px] divide-zinc-800">
    
    <%# Date Block %>
    <div class="flex-1 px-3 py-2 flex flex-col justify-center">
      <span class="text-[0.5rem] font-bold text-zinc-400 uppercase">CREATED</span>
      <div class="flex items-center gap-1">
        <span class="text-xs font-bold text-zinc-900 uppercase tracking-wide">
          <%= @retro.created_at.strftime("%b %d") %>
        </span>
      </div>
    </div>

    <%# Counter Block %>
    <div class="px-4 py-2 flex flex-col justify-center bg-zinc-100">
      <span class="text-[0.5rem] font-bold text-zinc-400 uppercase">ITEMS</span>
      <div class="flex items-center gap-1.5">
        <span class="text-sm font-black text-zinc-900"><%= feedback_count %></span>
      </div>
    </div>
  </div>
  
  <%# Decorative Stripe Corner (Optional visual flourish) %>
  <div class="absolute bottom-0 right-0 w-3 h-3 bg-[repeating-linear-gradient(-45deg,#000,#000_2px,transparent_2px,transparent_4px)] opacity-20 pointer-events-none"></div>
</div>