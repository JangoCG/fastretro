<div class="filter drop-shadow-xl sm:drop-shadow-2xl origin-top cursor-help relative w-fit group" style="<%= rotation_style %>">
<div class="transition-transform duration-300 ease-out group-hover:rotate-6 origin-top">

  <%# Wire Loop (the lace) %>
  <div class="absolute -top-5 sm:-top-7 left-1/2 -translate-x-1/2 w-10 sm:w-12 h-12 sm:h-16 rounded-full border-[2px] border-zinc-400 z-0"></div>
  <div class="absolute -top-1 sm:-top-2 left-[calc(50%-0.5rem)] w-1.5 h-2.5 sm:h-3 bg-zinc-300 border border-zinc-500 rounded-[1px] z-10"></div>

  <%# Tag Body %>
  <div class="relative z-20 w-32 sm:w-44 h-auto min-h-[10rem] sm:min-h-[14rem] <%= bg_color %> border <%= border_color %> rounded-sm flex flex-col overflow-hidden">
    <%# Grommet %>
    <div class="absolute top-2 sm:top-3 left-1/2 -translate-x-1/2 w-4 sm:w-5 h-4 sm:h-5 rounded-full border-2 border-zinc-300 bg-stone-100 shadow-inner z-30 flex items-center justify-center">
      <div class="w-2 sm:w-3 h-2 sm:h-3 bg-zinc-800/10 rounded-full"></div>
    </div>

    <%# Tag Content %>
    <div class="flex flex-col flex-1 pt-8 sm:pt-10 pb-0">
      <div class="px-3 sm:px-5 pb-1.5 sm:pb-2 text-[0.4rem] sm:text-[0.5rem] font-bold <%= accent_color %> leading-tight uppercase tracking-wider border-b <%= border_color %>">
        FASTER RETROS SINCE 2025
      </div>

      <div class="pt-3 sm:pt-4 px-2 text-center">
        <h1 class="text-base sm:text-xl font-black text-black uppercase leading-[0.9] tracking-tight">
          "<%= phase_title.gsub("\n", "<br>").html_safe %>"
        </h1>
      </div>

      <div class="flex-1 px-2 sm:px-4 pt-2 sm:pt-3 pb-3 sm:pb-4">
        <p class="text-[0.45rem] sm:text-[0.55rem] font-bold text-stone-800 uppercase leading-snug text-justify">
          <span class="bg-black text-white px-0.5 sm:px-1">INSTRUCTION:</span><br>
          <%= phase_instruction %>
        </p>
        <p class="mt-1.5 sm:mt-2 text-[0.35rem] sm:text-[0.45rem] text-stone-400 uppercase">
          <%= phase_footer %>
        </p>
      </div>

      <div class="h-5 sm:h-8 w-full relative overflow-hidden border-t <%= border_color %> mt-auto">
        <div class="absolute inset-0 h-full w-[200%]" style="<%= stripe_style %>"></div>
      </div>
    </div>
  </div>
</div>
</div>
