<% if FastRetro.saas? && Current.account.nearing_plan_feedbacks_limit? %>
  <% feedbacks_remaining = [Current.account.plan.feedback_limit - Current.account.feedbacks_count, 0].max %>
  <div class="near-limit-notice mb-6 animate-wiggle-hover border-2 border-black bg-[#ffe600] p-4 font-mono text-xs font-bold uppercase shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] flex flex-col sm:flex-row items-start sm:items-center justify-between gap-3 sm:gap-4">
    <span class="text-black leading-snug">
      <span class="fill-highlighter"><%= feedbacks_remaining %></span> feedbacks remaining
    </span>

    <% if Current.user&.owner? %>
      <span class="text-black leading-snug">
        You've used <%= Current.account.feedbacks_count %> out of <%= Current.account.plan.feedback_limit %> free feedbacks.
        <strong><%= link_to "Upgrade to unlimited", account_settings_path(anchor: "subscription"), class: "underline" %></strong>
      </span>
    <% else %>
      <span class="text-black leading-snug">
        This account has used <%= Current.account.feedbacks_count %> out of <%= Current.account.plan.feedback_limit %> free feedbacks.
        <strong>Upgrade soon</strong>
      </span>
    <% end %>
  </div>
<% end %>
