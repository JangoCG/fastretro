<% content_for :title, "Change your email" %>

<div class="px-4 py-4">
  <%= render BackButtonComponent.new(label: "profile", href: edit_user_path(@user)) %>
</div>

<div class="max-w-md mx-auto px-4 pb-8">
  <h1 class="text-3xl font-bold text-gray-900 text-center mb-8">Change your email</h1>

  <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6 lg:p-8">
    <%= form_with url: user_email_addresses_path(user_id: @user.id), method: :post, class: "flex flex-col gap-6", data: { controller: "form", turbo: false } do |form| %>
      <div>
        <label for="email_address" class="block text-sm font-medium text-gray-700 mb-1">New email address</label>
        <%= form.email_field :email_address,
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg bg-white text-gray-900 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent",
            autocomplete: "email",
            placeholder: "Enter new email address",
            autofocus: true,
            required: true %>
      </div>

      <p class="text-sm text-gray-500">Enter your new email address, then check your email to confirm the change.</p>

      <div class="flex justify-center">
        <button type="submit" class="inline-flex items-center gap-2 px-6 py-2 bg-slate-800 text-white rounded-lg hover:bg-slate-700 transition-colors" data-form-target="submit">
          <span>Continue</span>
          <%= icon_tag "arrow-right", class: "text-xl" %>
        </button>
      </div>
    <% end %>
  </div>
</div>
