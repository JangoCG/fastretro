<% content_for :title, "Edit your profile" %>
<div class="px-4 py-4">
  <%= render BackButtonComponent.new(label: "Profile", href: user_path(@user), variant: :fizzy) %>
</div>

<div class="max-w-xl mx-auto px-4 pb-8 font-sans">
  
  <%# Industrial Container %>
  <div class="bg-[#F8F5EC] border-[3px] border-zinc-900 shadow-[8px_8px_0px_0px_rgba(20,20,23,0.8)] relative">
    
    <%# Header Section %>
    <div class="p-6 border-b-[3px] border-zinc-900 bg-white relative">
       <%# Background Grid %>
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:10px_10px]"></div>
      
      <div class="relative z-10 flex items-center">
        <h1 class="text-2xl font-black text-zinc-900 uppercase tracking-tighter">
          Edit Profile
        </h1>
      </div>
    </div>

    <%# Form Body %>
    <div class="p-8 relative">
      <%# Background Grid %>
      <div class="absolute inset-0 pointer-events-none bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:20px_20px]"></div>

      <%= form_with model: @user, method: :patch, class: "flex flex-col gap-6 relative z-10", data: { controller: "form" } do |form| %>
        
        <%# Industrial Field %>
        <div>
          <label for="user_name" class="block text-xs font-bold text-zinc-500 uppercase tracking-widest mb-1.5 font-mono">
            Name
          </label>
          <%= form.text_field :name,
              class: "w-full px-4 py-3 border-[2px] border-zinc-900 bg-white text-zinc-900 font-bold focus:outline-none focus:ring-0 focus:border-zinc-900 focus:bg-yellow-50 focus:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all placeholder-zinc-300 rounded-none",
              autocomplete: "name",
              placeholder: "Enter your name",
              autofocus: true,
              required: true,
              data: { "1p-ignore": true } %>
        </div>

        <%# Industrial Field %>
        <div>
          <label for="user_email_address" class="block text-xs font-bold text-zinc-500 uppercase tracking-widest mb-1.5 font-mono">
            Email Address
          </label>
          <div class="flex items-center gap-3">
            <%= form.email_field :email_address,
                class: "flex-1 px-4 py-3 bg-zinc-100 border-[2px] border-zinc-300 text-zinc-500 font-mono text-sm cursor-not-allowed rounded-none",
                autocomplete: "username",
                required: true,
                readonly: true,
                value: @user.identity.email_address %>
            
            <%= link_to new_user_email_address_path(user_id: @user.id),
                  class: "group relative inline-flex items-center justify-center w-11 h-11 bg-white border-[2px] border-zinc-900 text-zinc-900 shadow-[2px_2px_0px_0px_rgba(0,0,0,1)] hover:translate-y-0.5 hover:shadow-none transition-all",
                  aria: { label: "Edit email address" } do %>
              <%= icon_tag "pencil", class: "w-4 h-4" %>
              <span class="sr-only">Edit email address</span>
            <% end %>
          </div>
        </div>

        <% if @user.errors.any? %>
          <div class="p-4 bg-red-50 border-[2px] border-red-500">
            <p class="font-bold text-red-700 uppercase tracking-wide text-xs mb-2">Please fix the following:</p>
            <ul class="text-xs text-red-600 font-mono list-disc list-inside">
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        
        <div class="flex justify-center pt-4">
          <button type="submit" class="group relative inline-flex items-center justify-center px-8 py-3 bg-zinc-900 text-[#F8F5EC] border-[2px] border-zinc-900 font-bold uppercase tracking-widest text-xs hover:-translate-y-1 hover:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] active:translate-y-0 active:shadow-none transition-all" data-form-target="submit">
            Save Changes
          </button>
        </div>
      <% end %>
    </div>
    
    <%# Technical Footer %>
    <div class="h-2 border-t-[3px] border-zinc-900 bg-zinc-900 w-full"></div>
  </div>
</div>

<% content_for :footer do %>
  <%= render "sessions/footer" %>
<% end %>
