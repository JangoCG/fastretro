<% content_for :title, "Choose an account" %>
<div class="bg-[#FAF9F6] border-[2px] border-zinc-900 shadow-[4px_4px_0px_0px_rgba(24,24,27,1)] max-w-full p-6 w-full sm:p-8 sm:w-[42ch] sm:mx-auto">
  <% if @accounts.any? %>
    <h1 class="text-xl font-black mb-6 text-zinc-900 uppercase tracking-tight">
      Your FastRetro Accounts
    </h1>

<div class="mb-6 bg-[#F5F1E8] border-[2px] border-zinc-400 p-5 relative">
  <div class="absolute top-2 right-2 text-[0.5rem] font-mono font-bold text-zinc-400 uppercase tracking-widest">
    "INFO"
  </div>

  <div class="flex items-start gap-4">
    <div class="shrink-0 text-zinc-600">
      <%= icon_tag "info", class: "w-5 h-5" %>
    </div>

    <div class="text-sm text-zinc-800">
      <h3 class="font-bold mb-2 text-base text-zinc-900">
        "<%= pluralize(@accounts.count, 'ACCOUNT').upcase %>"
      </h3>
      <p class="text-zinc-600 leading-relaxed font-medium">
        You can work in multiple accounts and switch between them anytime.
        Each account has its own team, retros, and settings.
      </p>
    </div>
  </div>

  <%# Decorative corner marks %>
  <div class="absolute top-0 left-0 w-3 h-3 border-t-[2px] border-l-[2px] border-zinc-900"></div>
  <div class="absolute bottom-0 right-0 w-3 h-3 border-b-[2px] border-r-[2px] border-zinc-900"></div>
</div>

    <menu class="flex flex-col gap-2 list-none p-0 mt-4 mb-0">
      <% @accounts.each do |account| %>
        <li class="m-0">
          <%= link_to root_url(script_name: account.slug), class: "inline-flex items-center w-full justify-start gap-3 bg-white border-[2px] border-zinc-900 px-4 py-3 text-zinc-900 hover:bg-zinc-100 hover:shadow-[2px_2px_0px_0px_rgba(24,24,27,1)] transition-all font-bold uppercase tracking-wide text-sm" do %>
            <%= icon_tag "marker", class: "text-xl" %>
            <span><%= account.name %></span>
          <% end %>
        </li>
      <% end %>
    </menu>
  <% else %>
    <h1 class="text-xl font-black mb-4 text-zinc-900 uppercase tracking-tight">Hmm...</h1>
    <p class="text-zinc-600 text-sm">You don't have any Fast Retro accounts.</p>
  <% end %>
  <div class="mt-6 pt-4 border-t-[2px] border-zinc-200 space-y-2">
    <%= link_to new_signup_path, class: "inline-flex items-center justify-center gap-2 w-full px-6 py-3 bg-zinc-900 text-white font-bold uppercase tracking-widest text-xs border-[2px] border-zinc-900 hover:bg-zinc-700 transition-all shadow-[2px_2px_0px_0px_rgba(24,24,27,1)] hover:shadow-none" do %>
      <%= icon_tag "add", class: "text-base" %>
      <span>Create New Account</span>
    <% end %>
    <%= button_to session_url(script_name: nil), method: :delete, class: "inline-flex items-center justify-center gap-2 w-full px-6 py-3 bg-white text-zinc-900 font-bold uppercase tracking-widest text-xs border-[2px] border-zinc-900 hover:bg-red-50 hover:text-red-700 hover:border-red-700 transition-all shadow-[2px_2px_0px_0px_rgba(24,24,27,1)] hover:shadow-none", data: { turbo: false } do %>
      <%= icon_tag "logout", class: "text-base" %>
      <span>Log out</span>
    <% end %>
  </div>
</div>
