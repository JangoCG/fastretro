<% content_for :full_width, true %>
<% content_for :body_class, "bg-zinc-100 text-zinc-900 font-sans antialiased overflow-x-hidden selection:bg-[#ffe600] selection:text-black" %>
<% content_for :title, @alternative.fetch(:meta_title) %>
<% content_for :meta_title, @alternative.fetch(:meta_title) %>
<% content_for :meta_description, @alternative.fetch(:meta_description) %>
<% content_for :meta_keywords, @alternative.fetch(:meta_keywords) %>

<div class="fixed inset-0 z-[-1] pointer-events-none opacity-[0.4]"
     style="background-image: radial-gradient(#a1a1aa 1px, transparent 1px); background-size: 24px 24px;">
</div>

<%= render LandingPageHeaderComponent.new %>

<main class="pt-24 pb-0 overflow-x-hidden">
  <section class="max-w-5xl mx-auto px-4 sm:px-6 mb-20">
    <div class="text-center">
      <p class="font-mono text-[10px] text-zinc-500 mb-3 uppercase tracking-widest">
        ALTERNATIVE COMPARISON
      </p>
      <h1 class="text-[1.75rem] sm:text-[2.5rem] md:text-[3.5rem] leading-[0.95] font-black uppercase tracking-tighter text-black mb-6">
        FAST RETRO VS<br>
        <span class="text-zinc-400"><%= @alternative.fetch(:name) %></span>
      </h1>
      <p class="max-w-2xl mx-auto text-sm sm:text-base font-mono text-zinc-600 leading-relaxed mb-8">
        Looking for a <strong class="text-black"><%= @alternative.fetch(:name) %> alternative</strong>?
        Fast Retro is <strong class="text-black">open source</strong>, supports
        <strong class="text-black">self-hosting</strong>, and keeps facilitation structured with a
        phase-driven retrospective flow.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <%= link_to new_signup_path(script_name: nil), class: "inline-flex items-center justify-center gap-2 bg-black text-white hover:bg-zinc-800 text-xs font-bold uppercase tracking-wider px-6 py-3 border-2 border-transparent" do %>
          <span>TRY FAST RETRO FREE</span>
          <span class="font-mono">-></span>
        <% end %>
        <a href="https://github.com/JangoCG/fastretro" target="_blank" rel="noopener noreferrer" class="inline-flex items-center gap-2 font-mono text-xs font-bold uppercase tracking-wider text-zinc-600 hover:text-black">
          <svg viewBox="0 0 24 24" class="w-4 h-4 fill-current"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          <span>VIEW SOURCE CODE</span>
        </a>
      </div>
      <p class="font-mono text-[10px] text-zinc-500 mt-4 uppercase tracking-wide">
        Free tier includes <%= number_with_delimiter(@free_limit) %> feedbacks. Paid plan is
        <% if @paid_price.present? %>
          <%= number_to_currency(@paid_price, unit: "€", format: "%u%n") %>/month per account.
        <% else %>
          currently unavailable.
        <% end %>
      </p>
    </div>
  </section>

  <section class="max-w-5xl mx-auto px-4 sm:px-6 mb-20">
    <div class="border-2 border-black bg-white overflow-hidden">
      <div class="grid grid-cols-3 border-b-2 border-black">
        <div class="p-4 sm:p-6 bg-zinc-100 border-r-2 border-black">
          <span class="font-mono text-xs uppercase tracking-wider text-zinc-500">Feature</span>
        </div>
        <div class="p-4 sm:p-6 bg-[#ffe600] border-r-2 border-black text-center">
          <span class="font-black text-sm sm:text-base uppercase tracking-tight">Fast Retro</span>
        </div>
        <div class="p-4 sm:p-6 bg-zinc-200 text-center">
          <span class="font-bold text-sm sm:text-base uppercase tracking-tight text-zinc-600"><%= @alternative.fetch(:name) %></span>
        </div>
      </div>

      <% @comparison_rows.each_with_index do |row, index| %>
        <div class="grid grid-cols-3 <%= "border-b border-zinc-200" unless index == @comparison_rows.size - 1 %>">
          <div class="p-4 sm:p-6 border-r-2 border-black bg-zinc-50">
            <span class="font-bold text-sm"><%= row[:feature] %></span>
          </div>
          <div class="p-4 sm:p-6 border-r-2 border-black text-center">
            <span class="font-mono text-sm text-emerald-600 font-bold"><%= row[:fast_retro] %></span>
          </div>
          <div class="p-4 sm:p-6 text-center">
            <span class="font-mono text-sm text-zinc-600"><%= row[:competitor] %></span>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <section class="max-w-5xl mx-auto px-4 sm:px-6 mb-20">
    <h2 class="text-2xl sm:text-3xl font-black uppercase tracking-tighter mb-8 text-center">
      WHY TEAMS SWITCH
    </h2>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <% @alternative.fetch(:reasons).each_with_index do |reason, index| %>
        <div class="border-2 border-black bg-white p-6 shadow-[4px_4px_0px_0px_rgba(0,0,0,1)]">
          <div class="flex items-start gap-4">
            <div class="w-10 h-10 bg-zinc-100 border-2 border-black flex items-center justify-center flex-shrink-0">
              <span class="font-black"><%= index + 1 %></span>
            </div>
            <p class="font-mono text-sm text-zinc-600 leading-relaxed">
              <%= reason %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <section class="max-w-5xl mx-auto px-4 sm:px-6 mb-20">
    <div class="border-2 border-black bg-[#F8F5EC] p-8 sm:p-12">
      <h2 class="text-xl sm:text-2xl font-black uppercase tracking-tighter mb-6">
        FAST RETRO CORE CAPABILITIES
      </h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 font-mono text-sm">
        <% @fast_retro_features.each do |feature| %>
          <div class="flex items-center gap-3">
            <span class="w-2 h-2 bg-black"></span>
            <span><%= feature %></span>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <section class="max-w-5xl mx-auto px-4 sm:px-6 mb-20">
    <div class="border-2 border-black bg-white p-6 sm:p-8">
      <h2 class="text-lg sm:text-xl font-black uppercase tracking-tighter mb-4">Compare Other Alternatives</h2>
      <div class="flex flex-wrap gap-2">
        <% @other_alternatives.each do |alternative| %>
          <%= link_to "VS #{alternative[:name].upcase}", public_send("alternative_#{alternative[:slug]}_path", script_name: nil), class: "inline-flex items-center justify-center bg-zinc-100 hover:bg-zinc-200 text-xs font-bold uppercase tracking-wider px-3 py-2 border border-black" %>
        <% end %>
      </div>
    </div>
  </section>

  <section class="max-w-4xl mx-auto px-4 sm:px-6 mb-20 text-center">
    <h2 class="text-2xl sm:text-3xl md:text-4xl font-black uppercase tracking-tighter leading-tight mb-6">
      START YOUR NEXT RETRO<br>
      <span class="text-zinc-400">WITH FAST RETRO</span>
    </h2>
    <p class="font-mono text-sm text-zinc-600 mb-8 max-w-xl mx-auto">
      Start free with <%= number_with_delimiter(@free_limit) %> feedbacks.
      <% if @paid_price.present? %>
        Upgrade to <%= number_to_currency(@paid_price, unit: "€", format: "%u%n") %>/month for unlimited feedback and users.
      <% else %>
        Live pricing is currently unavailable.
      <% end %>
    </p>
    <%= link_to new_signup_path(script_name: nil), class: "inline-flex items-center justify-center gap-2 bg-[#ffe600] text-black hover:bg-yellow-300 text-sm font-black uppercase tracking-wider px-10 py-4 border-2 border-black shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:shadow-none hover:translate-x-1 hover:translate-y-1 transition-all" do %>
      <span>GET STARTED FREE</span>
      <span class="font-mono">-></span>
    <% end %>
  </section>

  <%= render LandingPageFooterComponent.new %>
</main>
