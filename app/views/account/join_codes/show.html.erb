<% content_for :title, "Invite people" %>

<div class="px-4 py-4">
  <%= render BackButtonComponent.new(label: "Settings", href: account_settings_path, hotkeys: ["left", "esc"], variant: :fizzy) %>
</div>

<div class="max-w-xl mx-auto px-4 py-4 font-sans">
  <div class="bg-[#F8F5EC] border-[3px] border-zinc-900 shadow-[8px_8px_0px_0px_rgba(20,20,23,0.8)] relative" style="view-transition-name: <%= dom_id(@join_code) %>">
    <div class="p-6 border-b-[3px] border-zinc-900 bg-white relative">
      <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:10px_10px]"></div>
      <div class="relative z-10">
        <h1 class="text-2xl font-black text-zinc-900 uppercase tracking-tighter">
          Invite People
        </h1>
      </div>
    </div>

    <div class="p-8 relative">
      <div class="absolute inset-0 pointer-events-none bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:20px_20px]"></div>
      <div class="relative z-10 space-y-6">
        <p class="text-sm text-zinc-700">
          Anyone with this link can join your account.
        </p>

        <% url = join_url(code: @join_code.code) %>
        <% remaining_uses = [@join_code.usage_limit - @join_code.usage_count, 0].max %>
        <div>
          <label for="join_code_link" class="block text-xs font-bold text-zinc-500 uppercase tracking-widest font-mono mb-2">
            Invite Link
          </label>
          <div class="flex items-center gap-2">
            <input id="join_code_link" type="text" class="flex-1 px-4 py-3 text-sm font-mono text-zinc-900 bg-white border-[2px] border-zinc-900 rounded-none focus:outline-none focus:bg-yellow-50 transition-colors" value="<%= url %>" readonly>
            <button type="button"
                    class="group relative flex items-center justify-center w-12 h-11 bg-white border-[2px] border-zinc-900 text-zinc-900 shadow-[3px_3px_0px_0px_rgba(0,0,0,1)] hover:translate-y-0.5 hover:shadow-none transition-all active:translate-y-0 active:shadow-none"
                    data-controller="clipboard"
                    data-clipboard-text-value="<%= url %>"
                    data-action="clipboard#copy">
              <i class="icon icon--copy w-5 h-5" data-clipboard-target="icon"></i>
              <i class="icon icon--check w-5 h-5 text-green-600" data-clipboard-target="check" style="display: none;"></i>
              <span class="sr-only">Copy invite link</span>
            </button>
          </div>
        </div>

        <div class="border-t-[2px] border-zinc-200 pt-6 space-y-2">
          <div class="flex items-center justify-between gap-3">
            <p class="text-xs font-bold text-zinc-500 uppercase tracking-widest font-mono">Link Usage</p>
            <% if Current.user&.admin? %>
              <%= link_to "Edit usage limit", edit_account_join_code_path, class: "inline-flex items-center justify-center px-3 py-2 bg-white text-zinc-900 border-[2px] border-zinc-900 font-bold uppercase tracking-widest text-[0.65rem] hover:bg-zinc-100 transition-colors" %>
            <% end %>
          </div>

          <p class="text-sm font-bold <%= @join_code.active? ? 'text-zinc-900' : 'text-red-600' %>">
            <%= @join_code.usage_count %> of <%= @join_code.usage_limit %> uses consumed.
          </p>
          <p class="text-xs text-zinc-600"><%= remaining_uses %> uses remaining.</p>

          <% if Current.user&.admin? %>
            <%= button_to account_join_code_path,
                  method: :delete,
                  class: "w-full inline-flex items-center justify-center px-6 py-3 mt-2 bg-white text-zinc-900 border-[2px] border-zinc-900 font-bold uppercase tracking-widest text-xs hover:bg-zinc-100 transition-colors",
                  form: { class: "w-full" },
                  data: { turbo_confirm: "Regenerate this link? The previous link will stop working." } do %>
              Regenerate Link
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <div class="h-2 border-t-[3px] border-zinc-900 bg-zinc-900 w-full"></div>
  </div>
</div>
