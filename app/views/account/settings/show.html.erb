<div class="max-w-6xl mx-auto px-4 sm:px-6 py-8 font-sans">
  <header class="mb-6">
    <h1 class="text-2xl sm:text-3xl font-black text-zinc-900 uppercase tracking-tighter">Account Settings</h1>
  </header>

  <div class="grid gap-6 xl:grid-cols-2 items-start">
    <section class="bg-[#F8F5EC] border-[3px] border-zinc-900 shadow-[8px_8px_0px_0px_rgba(20,20,23,0.8)] relative">
      <div class="p-6 border-b-[3px] border-zinc-900 bg-white relative">
        <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:10px_10px]"></div>
        <h2 class="relative z-10 text-xl font-black text-zinc-900 uppercase tracking-wider">Account And Team</h2>
      </div>

      <div class="p-6 sm:p-8 relative flex flex-col gap-6">
        <div class="absolute inset-0 pointer-events-none bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:20px_20px]"></div>
        <div class="relative z-10 flex flex-col gap-6">
          <%= render "name" %>
          <div class="w-full h-[2px] bg-zinc-200"></div>
          <%= render "users" %>
        </div>
      </div>

      <div class="h-2 border-t-[3px] border-zinc-900 bg-zinc-900 w-full"></div>
    </section>

    <% if Current.user.admin? %>
      <section class="bg-[#F8F5EC] border-[3px] border-zinc-900 shadow-[8px_8px_0px_0px_rgba(20,20,23,0.8)] relative">
        <div class="p-6 border-b-[3px] border-zinc-900 bg-white relative">
          <div class="absolute inset-0 bg-[linear-gradient(to_right,#80808012_1px,transparent_1px),linear-gradient(to_bottom,#80808012_1px,transparent_1px)] bg-[size:10px_10px]"></div>
          <h2 class="relative z-10 text-xl font-black text-zinc-900 uppercase tracking-wider">Integrations</h2>
        </div>

        <div class="p-6 sm:p-8 relative">
          <div class="absolute inset-0 pointer-events-none bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:20px_20px]"></div>
          <div class="relative z-10">
            <%= render "integrations" %>
          </div>
        </div>

        <div class="h-2 border-t-[3px] border-zinc-900 bg-zinc-900 w-full"></div>
      </section>
    <% end %>

    <% if FastRetro.saas? && Current.user.owner? %>
      <div class="<%= Current.user.admin? ? 'xl:col-span-2' : '' %>">
        <%= render "subscription" %>
      </div>
    <% end %>
  </div>
</div>
