<%= form_with model: @account, url: account_settings_path, method: :patch, class: "flex flex-col gap-2", data: { controller: "form", action: "input->form#markDirty" } do |form| %>
  <label for="account_name" class="block text-xs font-bold text-zinc-500 uppercase tracking-widest mb-1.5 font-mono">
    ACCOUNT NAME
  </label>
  
  <div class="flex items-center gap-3">
    <div class="flex-1">
      <%= form.text_field :name,
        required: true,
        class: "w-full px-4 py-3 border-[2px] border-zinc-900 bg-white text-zinc-900 font-bold focus:outline-none focus:ring-0 focus:border-zinc-900 focus:bg-yellow-50 focus:shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] transition-all placeholder-zinc-300 rounded-none text-lg",
        placeholder: "ENTER ACCOUNT NAME" %>
    </div>
    
    <button type="submit"
      class="w-14 h-14 flex items-center justify-center bg-zinc-900 text-white border-[2px] border-zinc-900 hover:bg-white hover:text-zinc-900 transition-colors disabled:opacity-50 disabled:cursor-not-allowed group shadow-[4px_4px_0px_0px_rgba(0,0,0,1)] hover:translate-y-0.5 hover:shadow-none active:translate-y-0 disabled:shadow-none"
      data-form-target="submit"
      disabled>
      <%= icon_tag "arrow-right", class: "text-2xl" %>
      <span class="sr-only">SAVE</span>
    </button>
  </div>
<% end %>

<% if @account.errors[:name].any? %>
  <p class="text-[0.6rem] font-mono text-red-600 uppercase mt-2 tracking-wide font-bold">ERROR: <%= @account.errors[:name].first %></p>
<% end %>
