<% content_for :title, @retro.name %>

<div class="max-w-5xl mx-auto px-4 py-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%# Header with centered title and decorative lines %>
  <div class="flex items-center gap-4 mb-8">
    <div class="flex-1 border-t border-dashed border-gray-300"></div>
    <h1 class="font-black text-2xl text-gray-900 px-4"><%= @retro.name %></h1>
    <div class="flex-1 border-t border-dashed border-gray-300"></div>
    <%= render IconButtonComponent.new(icon: "pencil", variant: :secondary, size: :lg, href: edit_retro_path(@retro), label: "Edit retro") %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <%= render Retros::ColumnComponent.new(retro: @retro, category: "went_well") %>
    <%= render Retros::ColumnComponent.new(retro: @retro, category: "could_be_better") %>
  </div>
</div>
