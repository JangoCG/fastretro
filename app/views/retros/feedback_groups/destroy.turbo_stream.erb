<%
  feedbacks_by_category = @retro.feedbacks.published
    .includes(:user, :rich_text_content, :feedback_group)
    .to_a
    .group_by(&:category)
  participant = @retro.participants.includes(:votes).find_by(user: Current.user)
%>
<% @retro.column_categories.each do |category| %>
  <%= turbo_stream.replace "retro-column-#{category}" do %>
    <%= render "retros/streams/column",
      retro: @retro,
      category: category,
      participant: participant,
      feedbacks_by_category: feedbacks_by_category %>
  <% end %>
<% end %>
