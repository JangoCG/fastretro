<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  <%# Landing Page %>
  <url>
    <loc><%= root_url(script_name: nil) %></loc>
    <changefreq>weekly</changefreq>
    <priority>1.0</priority>
  </url>

  <%# Blog Index %>
  <url>
    <loc><%= blog_url(script_name: nil) %></loc>
    <changefreq>daily</changefreq>
    <priority>0.8</priority>
  </url>

  <%# Public Marketing Pages %>
  <url>
    <loc><%= shoutouts_url(script_name: nil) %></loc>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>

  <%# Legal Pages %>
  <url>
    <loc><%= imprint_url(script_name: nil) %></loc>
    <changefreq>yearly</changefreq>
    <priority>0.4</priority>
  </url>

  <url>
    <loc><%= privacy_policy_url(script_name: nil) %></loc>
    <changefreq>yearly</changefreq>
    <priority>0.4</priority>
  </url>

  <%# Blog Posts %>
  <% @posts.each do |post| %>
  <url>
    <loc><%= blog_post_url(post.slug, script_name: nil) %></loc>
    <lastmod><%= post.date.iso8601 %></lastmod>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>
  <% end %>

  <%# Alternative Pages (SEO) %>
  <url>
    <loc><%= alternative_easyretro_url(script_name: nil) %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>

  <url>
    <loc><%= alternative_parabol_url(script_name: nil) %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>

  <url>
    <loc><%= alternative_metroretro_url(script_name: nil) %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>

  <url>
    <loc><%= alternative_teamretro_url(script_name: nil) %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.7</priority>
  </url>

  <%# Auth Pages %>
  <url>
    <loc><%= new_session_url(script_name: nil) %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.5</priority>
  </url>

  <url>
    <loc><%= new_signup_url(script_name: nil) %></loc>
    <changefreq>monthly</changefreq>
    <priority>0.6</priority>
  </url>
</urlset>
