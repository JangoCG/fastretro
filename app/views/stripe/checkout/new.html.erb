<section class="text-center">
  <h2 class="text-2xl font-black uppercase tracking-tight mb-2">Upgrade</h2>
  <p class="text-zinc-600 font-mono text-sm mb-6">Unlock unlimited feedbacks</p>

  <%# Plan Card %>
  <div class="bg-zinc-100 border-2 border-zinc-900 p-6 mb-6">
    <div class="flex items-center justify-between mb-4">
      <h3 class="font-bold uppercase tracking-wide text-sm text-zinc-500">Plan</h3>
      <span class="px-3 py-1 bg-[#ffe600] text-zinc-900 text-xs font-bold uppercase">Recommended</span>
    </div>
    <p class="text-xl font-black uppercase tracking-tight"><%= FastRetro.pricing[:plan_name] %></p>
    <p class="text-3xl font-black mt-2"><%= FastRetro.pricing[:price_display] %></p>
  </div>

  <%# Features %>
  <div class="text-left mb-6">
    <h3 class="font-bold uppercase tracking-wide text-sm text-zinc-500 mb-3">What's included</h3>
    <ul class="space-y-2 font-mono text-sm">
      <li class="flex items-center gap-2">
        <span class="text-green-600 font-bold">+</span>
        <span>Unlimited feedbacks</span>
      </li>
      <li class="flex items-center gap-2">
        <span class="text-green-600 font-bold">+</span>
        <span>Unlimited retrospectives</span>
      </li>
    </ul>
  </div>

  <%= form_with url: stripe_checkout_path, method: :post, data: { turbo: false } do %>
    <%= hidden_field_tag :lookup_key, FastRetro.pricing[:lookup_key] %>
    <button type="submit" id="checkout-and-portal-button" class="w-full px-6 py-4 bg-zinc-900 text-white font-bold uppercase tracking-wide hover:bg-zinc-800 transition-colors border-2 border-zinc-900">
      Proceed to Checkout
    </button>
  <% end %>
</section>
